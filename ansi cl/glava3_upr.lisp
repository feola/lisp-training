;; 2. Напишите свой вариант функции union, который сохраняет порядок следования
;; элементов согласно исходным спискам

(defun my-union (a b)
  (if (null b)
      a
      (my-union (reverse (adjoin (car b) (reverse a)))
                (cdr b))))

(my-union '(a f c) '(b c d))

;; => (A F C B D)

(my-union '(a b c) '(d c e a f))

;; => (A B C D E F)

